<% @page_title = t('.forgotyourpassword') %>
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "standard_form" }) do |f| %>
  <%= devise_error_messages! %>
  <ul>
    <li class="form_header">
      <h2><%= t('.forgotyourpassword') %></h2>
    </li>
    <li>
      <%= f.label t('users.user_list.email') %>
      <%= f.email_field :email %>
    </li>
    <li>
      <%= f.submit t('.sendmeinstructions') %>
      <%= render :partial => "devise/shared/links" %>
    </li>
    <li class="bottom"></li>
  </ul>
<% end %>