<% @page_title = t('.manageprivileges') %>

<div class="standard_list privilege_list">
<table>
  <tr class="toolbar">
    <td>
      <a href="<%= new_privilege_path %>" title="<%= t('.addprivilege') %>" class="button">
        <%= image_tag("addperson.png") %>
        <span><%= t('.addprivilege') %></span>
      </a>
    </td>
  </tr>
  <tr class="headers">
    <th class="name">Name</th>
    <th class="description">Description</th>
    <th class="controller">Controller</th>
    <th class="category">Category</th>
    <th class="menutext">Menu Text</th>
    <th class="editdelete"></th>
    <th class="editdelete"></th>
  </tr>

<% @privileges.each do |privilege| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td><%= privilege.name %></td>
    <td><%= privilege.description %></td>
    <td><%= privilege.controller %></td>
    <td><%= privilege.category %></td>
    <td><%= privilege.menu_text %></td>
    <td align="center"><%= link_to t('common.edit'), edit_privilege_path(privilege) %></td>
    <td align="center"><%= link_to t('common.delete'), privilege, confirm: t('.suredeleteprivilege'), method: :delete %></td>
  </tr>
<% end %>
</table>
</div>
