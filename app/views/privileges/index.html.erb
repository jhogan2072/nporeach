<h1>Listing privileges</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Controller</th>
    <th>Action</th>
    <th>Menu</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @privileges.each do |privilege| %>
  <tr>
    <td><%= privilege.name %></td>
    <td><%= privilege.description %></td>
    <td><%= privilege.controller %></td>
    <td><%= privilege.action %></td>
    <td><%= privilege.menu_id %></td>
    <td><%= link_to 'Show', privilege %></td>
    <td><%= link_to 'Edit', edit_privilege_path(privilege) %></td>
    <td><%= link_to 'Destroy', privilege, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

