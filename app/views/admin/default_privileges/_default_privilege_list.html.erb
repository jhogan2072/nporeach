<table id="default_privileges">
  <tr class="headers">
    <th class="name"><%= header_link(t('common.name'), "default_privileges", "index", "name") %></th>
    <th class="description"><%= header_link(t('common.description'), "default_privileges", "index", "description") %></th>
    <th class="controller"><%= header_link(t('privileges.form.objectmanaged'), "default_privileges", "index", "controller") %></th>
    <th class="menutext"><%= header_link(t('.menutext'), "default_privileges", "index", "menu_text") %></th>
    <th class="editdelete"><a href="#" class="column_header"></a></th>
    <th class="editdelete"><a href="#" class="column_header"></a></th>
  </tr>
  <% @default_privileges.each do |privilege| %>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
      <td class="name"><%=link_to privilege.name, edit_admin_default_privilege_path(privilege) %></td>
      <td class="description"><%= privilege.description %></td>
      <td class="controller"><%= Privilege::CONTROLLERS[privilege.controller][1] %></td>
      <td class="menu_text"><%= privilege.menu_text %></td>
      <td align="center"><%= link_to(t('common.edit'), edit_admin_default_privilege_path(privilege)) %></td>
      <td align="center"><%= link_to(t('common.delete'), [:admin, privilege], :method => 'delete', :confirm => t('privileges.privilege_list.suredeleteprivilege')) %></td>
  </tr>
  <% end %>
</table>
