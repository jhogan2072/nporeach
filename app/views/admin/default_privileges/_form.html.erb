<%= form_for([:admin, @default_privilege], :html => {:class => "standard_form", :multipart => true}) do |f| %>
  <% if @default_privilege.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@default_privilege.errors.count, "error") %><%= t('privileges.form.preventprivilegesave') %></h2>

      <ul>
      <% @default_privilege.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <ul>
    <li class="form_header">
      <h2><%= t('privileges.form.manageprivilegeinformation') %></h2>
    </li>
    <li>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </li>
    <li>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </li>
    <li>
      <%= f.label :category %>
      <%= f.select :category, Privilege::CATEGORIES, prompt: t('privileges.form.selectcategory') %>
    </li>
    <li>
      <%= f.label :controller %>
      <%= f.text_field :controller %>
    </li>
    <li>
      <%= f.label :menu_text %>
      <%= f.text_field :menu_text %>
    </li>
    <li>
      <%= f.label :operations %>
      <% Privilege::OPERATIONS.each_pair do |key, value| %>
        <%= check_box_tag 'allowed_operations[]', value, has_privilege(value, @default_privilege.operations) %>
        <%= key %>
      <% end %>
      <%= hidden_field_tag 'allowed_operations[]','' %>
    </li>
    <li>
      <%= f.submit %>
    </li>
    <li class="bottom"></li>
  </ul>
<% end %>
