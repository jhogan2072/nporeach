<h1><%= @page_title = t('.plans') %></h1>
<%= link_to(t('.addnewplan'), :action => 'new') %>
<table id="plans">
  <tr>
    <th>Name</th>
    <th>Amount</th>
  </tr>
  <% @subscription_plans.each do |plan| %>
    <tr>
      <td><%= link_to(h(plan.name), [:admin, plan]) %></td>
      <td><%= number_to_currency(plan.amount) %></td>
    </tr>
  <% end %>
</table>
