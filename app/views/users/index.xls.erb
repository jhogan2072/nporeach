<table id="users">
  <tr class="headers">
    <th class="name"><%= header_link(t('.name'), "users", "index", "last_name") %></th>
    <th class="email"><%= header_link(t('.email'), "users", "index", "email") %></th>
    <th class="address"><%= header_link(t('.address'), "users", "index", "address") %></th>
    <th class="city"><%= header_link(t('.city'), "users", "index", "city") %></th>
    <th class="state"><%= header_link(t('.state'), "users", "index", "state") %></th>
    <th class="zip"><%= header_link(t('.zip'), "users", "index", "zip") %></th>
    <th class="phone"><%= header_link(t('.homephone'), "users", "index", "home_phone") %></th>
    <th class="editdelete"><a href="#" class="column_header"></a></th>
    <th class="editdelete"><a href="#" class="column_header"></a></th>
  </tr>
  <% @users.each do |user| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td class="name"><%=link_to user.full_name, edit_user_path(user) %></td>
    <td><%=h user.email %></td>
    <td><%=h user.address %></td>
    <td><%=h user.city %></td>
    <td align="center"><%=h user.state %></td>
    <td align="center"><%=h user.zip %></td>
    <td align="center"><%=h user.home_phone %></td>
    <td align="center"><%= link_to(t('common.edit'), edit_user_path(user)) %></td>
    <td align="center"><%= link_to(t('common.delete'), user, :method => 'delete', :confirm => t('.suredeleteuser')) unless user == current_user %></td>
  </tr>
  <% end %>
</table>
