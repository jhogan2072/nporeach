<%= form_for(@user, :html => {:class => "standard_form wide_form", :multipart => true}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %><%= t('.preventusersave') %></h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <ul>
    <li class="form_header">
      <h2><%= t('.manageuserinformation') %></h2>
    </li>
    <li>
      <%= f.label t('.name') %>
      <%= f.text_field :first_name, :size => "15" %>
      <%= f.text_field :last_name, :size => "15" %>
      <%= f.text_field :middle_name, :size => "3" %>
    </li>
    <li>
      <%= f.label :address %>
      <%= f.text_field :address %>
    </li>
    <li>
      <%= f.label :city %>
      <%= f.text_field :city %>
    </li>
    <li>
      <%= f.label :state %>
      <%= f.text_field :state %>
    </li>
    <li>
      <%= f.label :zip %>
      <%= f.text_field :zip %>
    </li>
    <li>
      <%= f.label :home_phone %>
      <%= f.text_field :home_phone %>
    </li>
    <li>
      <%= f.label :work_phone %>
      <%= f.text_field :work_phone %>
    </li>
    <li>
      <%= f.label :mobile_phone %>
      <%= f.text_field :mobile_phone %>
    </li>
    <li>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </li>
     <% if action_name == "new" %>
    <li>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </li>
    <li>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
    </li>
    <% end %>
    <li>
      <%= f.label :admin %>
      <%= f.check_box :admin %>
    </li>
    <li>
      <%= f.submit %>
    </li>
    <li class="bottom"></li>
  </ul>
<% end %>
