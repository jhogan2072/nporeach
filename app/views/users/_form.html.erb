<%= form_for(@user, :html => {:class => "standard_form wide_form", :multipart => true}) do |f| %>
<%= render 'shared/error_messages', :target => @user, :model => t('usermodel.modelname') %>
  <ul>
    <li class="form_header">
      <h2><%= t('.manageuserinformation') %></h2>
    </li>
    <li>
      <%= f.label t('.name') %>
      <%= f.text_field :first_name, :size => "15" %>
      <%= f.text_field :last_name, :size => "15" %>
      <%= f.text_field :middle_name, :size => "3" %>
    </li>
    <li>
      <%= f.label :address %>
      <%= f.text_field :address %>
    </li>
    <li>
      <%= f.label :city %>
      <%= f.text_field :city %>
    </li>
    <li>
      <%= f.label :state %>
      <%= f.text_field :state %>
    </li>
    <li>
      <%= f.label :zip %>
      <%= f.text_field :zip %>
    </li>
    <li>
      <%= f.label :home_phone %>
      <%= f.text_field :home_phone %>
    </li>
    <li>
      <%= f.label :work_phone %>
      <%= f.text_field :work_phone %>
    </li>
    <li>
      <%= f.label :mobile_phone %>
      <%= f.text_field :mobile_phone %>
    </li>
    <li>
      <%= f.label t('users.user_list.email') %>
      <%= f.email_field :email %>
    </li>
     <% if action_name == "new" || action_name == "create" %>
    <li>
      <%= f.label t('.password') %>
      <%= f.password_field :password %>
    </li>
    <li>
        <%= f.label t('.confirmpassword') %>
        <%= f.password_field :password_confirmation %>
    </li>
    <% end %>
    <li>
      <%= f.label t('.admin') %>
      <%= f.check_box :admin %>
    </li>
    <li>
      <%= f.label t('roles.roles') %>
      <% Role.all.each do |role| %>
        <%= check_box_tag 'user[role_ids][]', role.id, @user.roles.include?(role) %>
        <%= content_tag("span", role.name, :class => "checkbox_label") %>
      <% end %>
      <%= hidden_field_tag 'user[role_ids][]', '' %>
    </li>
    <li>
      <%= f.submit %>
    </li>
    <li class="bottom"></li>
  </ul>
<% end %>
