<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "standard_form", :multipart => true}) do |f| %>
  <%= f.hidden_field :account_id, :value => current_account.id %>
  
  <ul>
    <li class="form_header">
    <h2><%= t('.logintoyouraccount') %></h2>
    <li>
      <%= f.label :email %>
      <%= f.email_field :email %>
    </li>
    <li>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </li>
    <% if devise_mapping.rememberable? -%>
      <li>
        <%= f.label :remember_me %>
        <%= f.check_box :remember_me %>
      </li>
    <% end %>
    <li>
      <%= image_submit_tag("btn_login.jpg") %>
      <%= render :partial => "devise/shared/links" %>
    </li>
    <li class="bottom"></li>
  </ul>
<% end %>

