<% @page_title = t('.manageusers') %>
<div class="standard_list user_list">
<table id="users">
  <tr class="toolbar">
    <td>
      <label for="panel-4-2">
        <%= image_tag("addperson.png") %>
        <%= link_to('Add User', new_user_url) %></label>
    </td>
  </tr>
  <tr class="headers">
    <th class="name">Name</th>
    <th class="email">Email</th>
    <th class="address">Address</th>
    <th class="city">City</th>
    <th class="state">State</th>
    <th class="zip">Zip</th>
    <th class:"phone">Home Phone</th>
    <th class="editdelete"></th>
    <th class="editdelete"></th>
  </tr>
  <% current_account.users.each do |user| %>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
      <td class="name"><%=h user.last_name %><%= user.first_name ? ", " : "" %><%= h user.first_name %><%= user.middle_name ? " " << truncate(user.middle_name, length: 1) : "" %></td>
      <td><%=h user.email %></td>
      <td><%=h user.address %></td>
      <td><%=h user.city %></td>
      <td align="center"><%=h user.state %></td>
      <td align="center"><%=h user.zip %></td>
      <td align="center"><%=h user.home_phone %></td>
      <td align="center"><%= link_to('Edit', edit_user_path(user)) %></td>
      <td align="center"><%= link_to('Delete', user, :method => 'delete', :confirm => 'Are you sure you want to delete this user?') unless user == current_user %></td>
    </tr>
  <% end %>
</table>
</div>
